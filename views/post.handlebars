<div class="post-box">
  <div class="title-bar d-flex justify-content-between">
    <h3>{{title}}</h3>
    <p>Posted by {{user.username}} on {{format_date date_created}}</p>
  </div>
  <div class="post-text">
    {{post_text}}
  </div>
</div>
{{#if logged_in}}
<form class="input-group mt-3 mb-3 create-comment-form">
  <input type="text" class="form-control" id="comment-text" placeholder="Leave a comment!" aria-label="Comment entry" aria-describedby="comment-button">
  <button class="btn btn-outline-secondary" type="submit" id="comment-submit">Submit</button>
</form>

{{/if}}
{{#each comments as |comment|}}
<div class="container-sm border border-2 mb-3">
  <p>{{comment.comment_text}}</p>
  <p>-{{comment.user.username}} {{format_date date_created}}</p>
</div>
{{/each}}

<script src="/js/createcomment.js"></script>